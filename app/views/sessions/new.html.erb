<h1> Login Form </h1>

<%= form_with(scope: :session, url: login_path, local: true ) do |f| %>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email%>
  </p>

  <p>
    <%= f.label :password %><br/>
    <%= f.text_field :password%>
  </p>

  <p>
    <%= f.submit "Login" %><br/>
  </p>
  <%= link_to 'Create user Account!', signup_path() %>
  <br>
  <%= link_to 'Home', root_path() %>
<% end %>