<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<table>
  <thead>
  <th>ALbum Name</th>
  <% if logged_in? %>
  <th colspan="3"> Action </th>
  <% end %>
  </thead>

  <tbody>
  <% @albums.each do |album| %>
    <tr>
      <td><%= link_to  album.name, album_path(album)%></td>
      <% if logged_in? && (current_user.id == album.user_id) %>
        <td> <%= link_to 'Edit', edit_album_path(album)%></td>
        <td><%= link_to 'Delete', album_path(album), method: :delete, data: {confirm: "Are you sure want to delete this?"} %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>


